let n = 4; // Number of rows for the triangle

for (let i = 1; i <= n; i++) {
  let row = ''; // Create a row for the current line
  let p = 64 + i; // Starting ASCII value for the current row
  for (let j = i; j >= 1; j--) {
    row += String.fromCharCode(p--); // Append the current character and decrement `p`
  }
  console.log(row); // Print the current row
}
